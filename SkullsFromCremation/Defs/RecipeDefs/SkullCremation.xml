<Defs>

<!--NO AUTO STRIP-->

<RecipeDef>
    <defName>CremateCorpseGetSkull</defName>
    <label>cremate corpse and acquire skull</label>
    <description>Cremate a corpse to completely destroy it, but save the skull for future use.\n\nAll apparel worn by the corpse will also be destroyed.</description>
    <jobString>Cremating.</jobString>
    <workAmount>180</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <autoStripCorpses>false</autoStripCorpses>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
		<li>CorpsesAnimal</li>
      </disallowedCategories>
      <specialFiltersToDisallow>
		<li>AllowHeadless</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Corpse_Human</li>
      </thingDefs>
      <specialFiltersToAllow>
        <li>AllowCorpsesColonist</li>
        <li>AllowCorpsesStranger</li>
		<li>AllowHeaded</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
	<products>
      <Skull>1</Skull>
    </products>
	<recipeUsers>
		<li>ElectricCrematorium</li>
	</recipeUsers>
</RecipeDef>

